<head>
  <title>Race Registration</title>
  <%= render "shared/navbar" %>
</head>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <h2> Registration </h2>
      <h3>Likely Racers</h3>
      <div class="likely-table">
        <table class="table table-hover table-bordered sortable" id="likely-table">
          <thead>
          <tr>
            <th>ID</th>
            <th>Racer</th>
            <th>Bib</th>
          </tr>
          </thead>
          <tbody>
          <% if @likely_racers && @likely_racers.any? %>
            <% @likely_racers.each do |racer| %>
              <tr>
                <td><%= racer.id %></td>
                <td><%= racer.first_name %> <%= racer.last_name %></td>
                <td><%= racer.fav_bib %></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <%= form_for @start_item, :html => {:class => "form-horizontal "} do |i| %>
        <% if @start_item.errors.any? %>
          <div class="error-explanation">
            <ul>
              <% @start_item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <div class="form-group">
            <%= i.label :bib, "Bib:", class: "col-md-1 control-label" %>
              <div class="col-md-3">
                <%= i.text_field :bib, class: "form-control" %>
              </div>
          </div>
          <div class="form-group">
            <%= i.label :group, "Group:", class: "col-md-1 control-label" %>
              <div class="col-md-3">
                <%= i.select :group, options_for_select(['ALL','Canine','Loop-Beer']), {}, class: "form-control" %>
              </div>
          </div>
          <div class="form-group">
            <%= i.label :racer_id, "Racer:", class: "col-md-1 control-label" %>
              <div class="col-md-3">
                <%= i.autocomplete_field :racer_id, autocomplete_racer_racers_path, class: "form-control", :value => params[:racer_name] %>
                <%= i.hidden_field :racer_id, id: "racer_id_hidden", :value => params[:racer_id]%>
              </div>
          </div>
          <div class="form-group">
            <%= i.label :race_id, "Race ID:", class: "col-md-1 control-label" %>
              <div class="col-md-3">
                <%= i.text_field :race_id, class: "form-control", :value => params[:race_id] || @race.id %>
              </div>
          </div>
          <div class="form-group">
            <div class="col-md-1 col-md-offset-1">
            <%=button_tag "Submit", class: "btn btn-default"%>
            </div>
          </div>
      <% end %>
      <% if current_user and current_user.admin? %>
      <div class="row">
        <div class="col-md-3 col-md-offset-1">
          <%= link_to 'Add new racer', new_racer_path(), :class => "btn btn-default" %>
          <%= link_to 'Back to race', race_path(params[:race_id] || @race.id), :class => "btn btn-default" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    addLikelyRacersListener();
    runAutocompleteDance("start_item_racer_id");
  });
</script>
